{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS (NPM)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Debug Port",
            "port": 9229,
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests (Current File)",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "package.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}