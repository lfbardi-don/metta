// Prisma schema for Neon PostgreSQL database
// This is used for auditing/logging only, not for AI context

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  messageId      String?  @unique // External message ID from Chatwoot
  contactId      String?
  content        String
  direction      String // 'incoming' | 'outgoing'
  messageType    String   @default("text") // 'text' | 'interactive'
  metadata       Json?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([messageId])
  @@index([createdAt])
}

model Conversation {
  id                String             @id
  metadata          Json?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  messages          Message[]
  conversationState ConversationState?

  // Note: AuthSession relation removed - auth is now per-customer (by email), not per-conversation

  @@index([createdAt])
}

model AuthSession {
  id                 String    @id @default(uuid())
  email              String    @unique // Customer email as primary key (24h auth window)
  verified           Boolean   @default(false)
  verifiedAt         DateTime? // When verification happened
  expiresAt          DateTime // Session expiration (24 hours after verification)
  lastConversationId String? // Track where auth was last used
  metadata           Json? // For storing additional data (e.g., failed attempt counters)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Note: Removed conversation relation - auth is now per-customer, not per-conversation

  @@index([email])
  @@index([expiresAt])
}

model ConversationState {
  id             String   @id @default(uuid())
  conversationId String   @unique
  state          Json? // State object: { products: ProductMention[] }
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

// UnknownUseCase - Auditoria de casos não mapeados
// Para análise e melhoria contínua do sistema
model UnknownUseCase {
  id             String   @id @default(uuid())
  conversationId String
  contactId      String?
  messageContent String   // Mensagem original do cliente
  detectedIntent String   // Intent detectado pelo classificador
  confidence     Float    // Score de confiança do classificador
  agentResponse  String?  // Resposta que o agente deu (se houver)
  wasHandedOff   Boolean  @default(false) // Se foi derivado para humano
  handoffReason  String?  // Motivo da derivação
  metadata       Json?    // Dados adicionais para análise
  createdAt      DateTime @default(now())

  @@index([conversationId])
  @@index([detectedIntent])
  @@index([createdAt])
  @@index([wasHandedOff])
}
