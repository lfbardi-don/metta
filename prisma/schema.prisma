// Prisma schema for Neon PostgreSQL database
// This is used for auditing/logging only, not for AI context

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id             String   @id @default(uuid())
  conversationId String
  messageId      String?  @unique // External message ID from Chatwoot
  contactId      String?
  content        String
  direction      String // 'incoming' | 'outgoing'
  messageType    String   @default("text") // 'text' | 'interactive'
  metadata       Json?
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([messageId])
  @@index([createdAt])
}

model Conversation {
  id                String             @id
  metadata          Json?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  messages          Message[]
  authSession       AuthSession?
  conversationState ConversationState?

  @@index([createdAt])
}

model AuthSession {
  id             String   @id @default(uuid())
  conversationId String   @unique
  email          String // Hashed email for privacy
  verified       Boolean  @default(false)
  expiresAt      DateTime // Session expiration (30 minutes after verification)
  metadata       Json? // For storing additional data (e.g., failed attempt counters)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([expiresAt])
}

model ConversationState {
  id             String   @id @default(uuid())
  conversationId String   @unique
  state          Json? // State object: { products: ProductMention[] }
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}
